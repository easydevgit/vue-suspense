{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule":true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/node"
    ],
    "types": [
      "webpack-env",
      "node",
      "quasar",
    ],
    "paths": {
      "@/*": ["src/*"	],
      "~/*":["./*"],
      "@classes/*": [
        "src/classes/*"
      ],
      "@styles/*": [
        "src/assets/css/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "scripthost",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable",
      "es2017.object",
      "webworker"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
